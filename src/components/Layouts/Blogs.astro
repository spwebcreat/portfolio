---
import { Image } from 'astro:assets'
import { getLatestPosts, formatDate, categoryLabels, categoryColors } from '../../lib/blog'
import NoImage from '../../assets/img/noimage.jpg'

const posts = await getLatestPosts(9);
const hasPosts = posts.length > 0;
---

<section class="sec blogs">
  <div class="content">
    <div class="contentTitle">
      <h2 class="title">BLOGS</h2>
    </div>
    <div class="contentBody">
      {!hasPosts ? (
        <div class="text-center text-2xl font-bold">Coming Soon...</div>
      ) : (
        <div class="cards">
          {posts.map((post) => (
            <a href={`/blog/${post.slug}/`} class="card">
              {post.data.heroImage ? (
                <div class="cardImage">
                  <Image src={post.data.heroImage} alt={post.data.title} />
                </div>
              ) : (
                <div class="cardImage">
                  <Image src={NoImage} alt={post.data.title} />
                </div>
              )}
              <div class="cardMeta">
                <div class="cardMetaInfo">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  <span class:list={[
                    'categoryBadge',
                    categoryColors[post.data.category]
                  ]}>
                    {categoryLabels[post.data.category]}
                  </span>
                </div>
                <div class="cardMetaTitle">{post.data.title}</div>
                {post.data.tags.length > 0 && (
                  <div class="cardMetaTags">
                    {post.data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          ))}

        </div>
        <div class="text-right mt-16">
          <a href="/blog/" class="viewAll">
            All Posts &rarr;
          </a>
        </div>
      )}
    </div>
  </div>
</section>

<style lang="stylus">
  .cards
    @apply max-w-5xl mx-auto grid grid-cols-1 gap-10
    @media (min-width: 768px)
      @apply grid-cols-3

  .card
    @apply grid gap-10 transition-opacity duration-300
    grid-template-columns: 1fr
    grid-template-rows: subgrid
    grid-row: span 2
    &:hover
      @apply opacity-80
    @media (max-width: 768px)
      @apply grid-cols-1

  .cardImage
    @apply transition-opacity duration-300 relative overflow-hidden
    aspect-ratio: 1 / 1
    img
      @apply w-full h-full object-cover

  .cardMeta
    > * + *
      @apply mt-4
    &Title
      @apply text-lg font-extrabold
    &Info
      @apply flex items-center gap-3 text-sm
    &Tags
      @apply flex flex-wrap gap-1

  .categoryBadge
    @apply inline-flex items-center text-xs font-bold px-3 py-1 border

  .tag
    @apply text-white px-2 py-1 text-xs border border-white
    &::before
      content: "#"
      @apply mr-1

  .viewAll
    @apply text-white transition-opacity border border-white px-4 py-2
    &:hover
      @apply opacity-80
</style>
