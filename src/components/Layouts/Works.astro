---


<section class="sec works">


  <div class="content">

    <div class="contentTitle">
      <h2 class="title">Works</h2>
    </div>

    <div class="contentBody">

      <div class="cards">
        {
          [...portfolio].sort((a, b) => a.sort - b.sort).map((item) => (
            <div class="card">
              {item.anonymous ? (
                <div class="cardImage">
                  <Image src={item.image} alt={item.title} />
                </div>
              ) : (
                <a class="cardImage hover:opacity-90" href={item.url} target="_blank">
                  <Image src={item.image} alt={item.title} />
                  <span>{item.url}</span>
                </a>
              )}
              <div class="cardMeta">
                <div class="cardMetaTitle">
                  {item.anonymous ? item.anonymousTitle : item.title}
                  {/* {item.anonymous && <span class="anonymousBadge">請負制作</span>} */}
                </div>
                <div class="cardMetaScope">
                  {item.scope.map((s) => (
                    <span class:list={['scopeBadge', `scopeBadge--${s}`]}>
                      {scopeLabels[s]}
                    </span>
                  ))}
                </div>
                <div class="cardMetaDescription">
                  {item.description}
                </div>
                <ul class="cardMetaTech">
                  {
                    item.tech.map((tech) => (
                      <li class="cardMetaTechItem">{tech}</li>
                    ))
                  }
                </ul>
              </div>
            </div>
          ))
        }

      </div>

    </div>

  </div>

</section>

<style lang="stylus">
  .cards
    @apply max-w-5xl mx-auto
    > * + * 
      @apply mt-10 

  .card
    @apply grid gap-10 
    grid-template-columns: 35% 1fr
    @media (max-width: 768px)
      @apply grid-cols-1

  .cardImage
    @apply transition-opacity duration-300 relative overflow-hidden
    aspect-ratio 4/3
    img
      @apply w-full h-full object-cover
    span
      @apply bg-primary p-2 w-full block text-center text-white absolute bottom-0 left-0 text-sm font-bold

  .cardMeta
    > * + *
      @apply mt-8
    &Title
      @apply text-3xl font-extrabold flex items-center gap-3 flex-wrap
    &Scope
      @apply flex gap-2 flex-wrap
    &Description
      line-height 1.8
    &Tech
      @apply flex flex-wrap gap-1
      li
        @apply bg-bk text-white px-2 py-2 text-sm font-bold

  .anonymousBadge
    @apply text-xs font-normal bg-gray-400 text-white px-2 py-1 rounded

  .scopeBadge
    @apply inline-flex items-center text-xs font-bold px-3 py-1
    &--design
      @apply bg-primary text-white
    &--coding
      @apply bg-blue text-white

</style>